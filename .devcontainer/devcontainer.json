{
  "name": "Ubuntu",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        // Scala
        "scala-lang.scala@0.5.7",
        "scalameta.metals@1.26.0",
        // Git
        "Exelord.git-commits"
        // Various
        // "GitHub.copilot" // Uncomment to use GitHub Copilot
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh && nix profile install nixpkgs#nix-direnv && direnv allow",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
	"extraNixConfig": "experimental-features = nix-command flakes"
    }
  }
}
